  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "0.36.2"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
